<?xml version="1.0" encoding="UTF-8"?>

<!--
************************************************************************
UH 1 simulation config.

************************************************************************
-->

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Bell UH 1 "Huey"</description>
    <author>BARANGER Emmanuel (3D) Maik Justus (FDM, sound)</author>
    <status>alpha</status>
    <license>GPL v2</license>

    <flight-model>yasim</flight-model>
    <aero>uh1</aero>
    <fuel-fraction>0.5</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/UH-1/uh1-splash.png</splash-texture>
    </startup>

    <sound>
      <path>Aircraft/UH-1/Sounds/uh1-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/UH-1/Models/uh1.xml</path>
      <uh1>
        <state type="int">0</state>
        <engine type="float">0.0</engine>
        <rotor-step-deg type="float">-1.0</rotor-step-deg>
      </uh1>
    </model>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="1">
      <name>Co-Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="2">
      <name>Right Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="3">
      <name>Middle Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="4">
      <name>Left Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="5">
      <name>Load</name>
      <weight-lb>1700</weight-lb>
      <max-lb>3200</max-lb>
    </weight>

    <help>
      <title>Bell UH 1 "Huey"</title>
      <line></line>
      <key>
        <name>d</name>
        <desc>Open/Close crew door</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close passenger door</desc>
      </key>
      <key>
        <name>N</name>
        <desc>Toggle rotor brake</desc>
      </key>
      <key>
        <name>n</name>
        <desc>Apply rotor brake</desc>
      </key>
      <key>
        <name>}</name>
        <desc>Start Engines</desc>
      </key>
      <key>
        <name>{</name>
        <desc>Shutdown Engines</desc>
      </key>
      <key>
        <name>Ctrl+f</name>
        <desc>Surprise</desc>
      </key>
    </help>

    <menubar include="Dialogs/uh1-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <gear>
      <brake-parking>1</brake-parking>
    </gear>
    <rotor>
      <reltarget>1</reltarget>
      <maxreltorque>1</maxreltorque>
    </rotor>
  </controls>

  <instrumentation>
    <gsdi>
      <serviceable type="bool">true</serviceable>
        <enabled type="bool">true</enabled>
      </gsdi>
  </instrumentation>

  <input>
    <keyboard include="Nasal/uh1-keyboard.xml"/>
  </input>

  <rotors>
    <main>
      <rpm type="double">0</rpm>
      <cone-deg type="double">0</cone-deg>
      <cone1-deg type="double">0</cone1-deg>
      <cone2-deg type="double">0</cone2-deg>
      <cone3-deg type="double">0</cone3-deg>
      <cone4-deg type="double">0</cone4-deg>
    </main>
    <bar>
      <roll-deg type="float">0</roll-deg>
      <yaw-deg type="float">0</yaw-deg>
    </bar>
    <bar2>
      <roll-deg type="float">0</roll-deg>
      <yaw-deg type="float">0</yaw-deg>
    </bar2>
  </rotors>

  <orientation>
    <roll-rate-degps type="float">0</roll-rate-degps>
  </orientation>

  <nasal>
    <uh1>
      <file>Aircraft/UH-1/Nasal/doors.nas</file>
      <file>Aircraft/UH-1/Nasal/uh1.nas</file>
      <file>Aircraft/UH-1/Nasal/liveries.nas</file>
      <file>Aircraft/UH-1/Nasal/light.nas</file>
    </uh1>
  </nasal>

</PropertyList>

